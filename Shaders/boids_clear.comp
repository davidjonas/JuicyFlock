#version 430 core

layout (local_size_x = 256, local_size_y = 1, local_size_z = 1) in;

layout (std430, binding = 2) buffer CellHeads
{
    int head[];
};

uniform int u_cellCount;

void main()
{
    uint idx = gl_GlobalInvocationID.x;
    if (idx >= uint (u_cellCount))
        return;

    head[int (idx)] = -1;
}


